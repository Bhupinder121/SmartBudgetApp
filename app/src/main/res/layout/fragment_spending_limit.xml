<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    android:fillViewport="true"
    tools:context=".ui.usersetup.SpendingLimitFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_limit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Your Daily Spending Limit"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_limit_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Choose a suggested limit or set your own. This will help you stay on track."
            android:textColor="#BDBDBD"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_limit_title" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_quick_limits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:chipSpacingHorizontal="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_limit_subtitle"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_limit_500"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹500"
                android:textColor="@color/chip_text_state"
                app:chipBackgroundColor="@color/chip_background_state"
                app:chipStrokeColor="@color/chip_stroke_state"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_limit_1000"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1000"
                android:textColor="@color/chip_text_state"
                app:chipBackgroundColor="@color/chip_background_state"
                app:chipStrokeColor="@color/chip_stroke_state"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_limit_1500"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1500"
                android:textColor="@color/chip_text_state"
                app:chipBackgroundColor="@color/chip_background_state"
                app:chipStrokeColor="@color/chip_stroke_state"
                app:chipStrokeWidth="1dp"/>
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tv_or_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="OR"
            android:textColor="#BDBDBD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chip_group_quick_limits" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_custom_limit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Enter Custom Limit"
            android:textColorHint="#BDBDBD"
            app:boxStrokeColor="@color/active_nav_icon_tint"
            app:hintTextColor="@color/active_nav_icon_tint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_or_divider">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_custom_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_limit_help_me_decide"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Help Me Decide"
            android:textColor="@color/active_nav_icon_tint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_custom_limit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_limit_finish_setup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="12dp"
            android:text="Finish Setup"
            android:textColor="#1C1C1E"
            app:backgroundTint="@color/active_nav_icon_tint"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_limit_help_me_decide" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
