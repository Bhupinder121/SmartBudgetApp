<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="?android:colorBackground"
    tools:context=".ui.usersetup.SpendingLimitFragment"> <!-- Adjust context -->

    <TextView
        android:id="@+id/tv_limit_question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="What's your daily spending goal?"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="?attr/colorOnBackground"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toTopOf="@+id/chip_group_quick_limits"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_quick_limits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:chipSpacingHorizontal="8dp"
        app:singleSelection="true"
        app:selectionRequired="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_limit_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_limit_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹500"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_limit_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹1000"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_limit_1500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹1500"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tv_or_divider_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/chip_group_quick_limits"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_limit_help_me_decide"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Me Decide"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_or_divider_limit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_custom_limit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:prefixText="₹"
        app:prefixTextColor="?attr/colorOnSurface"
        style="?attr/textInputFilledStyle"
        app:layout_constraintTop_toBottomOf="@+id/btn_limit_help_me_decide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_custom_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:hint="Custom Amount"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            android:textColor="?attr/colorOnSurface"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_limit_finish_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Setup"
        style="?attr/materialButtonStyle"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>