    -->

    <TextView
        android:id="@+id/tv_welcome_headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome! Let's set up your financial profile."
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="?attr/colorOnBackground"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_welcome_explanation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_welcome_explanation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This initial setup will help us provide personalized insights for smarter budgeting."
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_headline"
        app:layout_constraintBottom_toTopOf="@+id/btn_welcome_get_started"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_welcome_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        style="?attr/materialButtonStyle"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:backgroundTint="@color/active_nav_icon_tint"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome_explanation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>