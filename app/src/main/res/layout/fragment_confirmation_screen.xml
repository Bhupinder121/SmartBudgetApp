<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:background="?android:colorBackground"
    tools:context=".ui.usersetup.ConfirmationScreenFragment">

    <!-- Optional: A success icon or animation -->
    <ImageView
        android:id="@+id/iv_confirmation_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rupee_sign_svgrepo_com"
        app:tint="@color/active_nav_icon_tint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_confirmation_message"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="32dp"
        android:contentDescription="Setup Complete" />

    <TextView
        android:id="@+id/tv_confirmation_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You're all set! Start by adding your first transaction."
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="?attr/colorOnBackground"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_confirmation_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_confirmation_go_to_dashboard"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirmation_go_to_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Dashboard"
        style="?attr/materialButtonStyle"
        android:backgroundTint="@color/active_nav_icon_tint"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirmation_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>